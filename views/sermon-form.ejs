<!-- Sermon Modification And Creation section -->
<section class="create">
  <!-- create content -->
  <div class="create__content">
    <div class="create__content--form">
      <!-- First page starts here -->
      <div class="create__content--form__page">
        <!-- Sermon Title -->
        <div class="create__content--form__page--field">
          <label for="sermon-title">Title of the Sermon</label>
          <input type="text" id="sermon-title" />
        </div>
        <!-- Bible Verse -->
        <div class="create__content--form__page--field">
          <label for="bible_verse">Bible Verse</label>
          <input type="text" id="bible_verse" />
        </div>
        <!-- Bible Verse -->
        <div class="create__content--form__page--field">
          <label for="description">Description</label>
          <input type="text" id="description" />
        </div>
        <!-- Next button -->
        <div class="create__content--form__page--field">
          <button class="next-1 next">Next</button>
        </div>
      </div>
      <!-- First page ends here -->

      <!-- Second page starts here -->
      <div class="create__content--form__page">
        <!-- Date of birth-->
        <div class="create__content--form__page--field">
          <label for="email-address">Email</label>
          <input type="email" id="email-address" />
        </div>
        <!-- Phone Number -->
        <div class="create__content--form__page--field">
          <label for="phone-number">Phone Number</label>
          <input type="number" id="phone-number" />
        </div>
        <!-- Next button -->
        <div class="create__content--form__page--field btns">
          <button class="prev-1 prev">Previous</button>
          <button class="next-2 next">Next</button>
        </div>
      </div>
      <!-- Second page ends here -->
      <!-- Third page starts here -->
      <div class="create__content--form__page">
        <!-- Date of birth-->
        <div class="create__content--form__page--field">
          <label for="date-of-birth">Date of birth</label>
          <input type="date" id="date-of-birth" />
        </div>
        <!-- Gender -->
        <div class="create__content--form__page--field">
          <label for="phone-number">Gender</label>
          <select>
            <option value="female">Female</option>
            <option value="male">Male</option>
            <option value="other">Other</option>
          </select>
        </div>
        <!-- Next button -->
        <div class="create__content--form__page--field btns">
          <button class="prev-2 prev">Previous</button>
          <button class="next-3 next">Next</button>
        </div>
      </div>
      <!-- Third page ends here -->
      <!-- Fourth page starts here -->
      <div class="create__content--form__page">
        <!-- Username-->
        <div class="create__content--form__page--field">
          <label for="username">Username</label>
          <input type="text" id="username" />
        </div>
        <!-- Password -->
        <div class="create__content--form__page--field">
          <label for="password">Password</label>
          <input type="password" id="password" />
        </div>
        <!-- Next button -->
        <div class="create__content--form__page--field btns">
          <button class="prev-3 prev">Previous</button>
          <button class="submit">submit</button>
        </div>
      </div>
      <!-- Fourth page ends here -->
    </div>
  </div>
</section>
